{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^Ri|^SVG|^Icons|ChipViz",
        "argsIgnorePattern": "^_"
      }
    ],
    "react/no-unescaped-entities": [
      "error",
      {
        "forbid": [">", "}"]
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
